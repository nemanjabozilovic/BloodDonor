<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center">

        <TextView
            android:id="@+id/submitted_by_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/submitted_by"
            android:textSize="14sp"
            android:textColor="@color/gray_700"/>

        <TextView
            android:id="@+id/submitted_by_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/patient_name_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/patient_name"
            android:textSize="14sp"
            android:textColor="@color/gray_700"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/patient_name_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/location_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/location"
            android:textSize="14sp"
            android:textColor="@color/gray_700"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/location_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/location_type_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/location_type_hint"
            android:textSize="14sp"
            android:textColor="@color/gray_700"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/location_type_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/location_phone_numbers_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/phone_numbers_hint"
            android:textSize="14sp"
            android:textColor="@color/gray_700"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/location_phone_numbers_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/blood_type_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/blood_type"
            android:textSize="14sp"
            android:textColor="@color/gray_700"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/blood_type_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/possible_donors_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/possible_donors_hint"
            android:textSize="14sp"
            android:textColor="@color/gray_700"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/possible_donors_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/deadline_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/deadline_hint"
            android:textSize="14sp"
            android:textColor="@color/gray_700"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/deadline_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_500"
            android:layout_marginTop="16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="16dp">

            <TextView
                android:id="@+id/get_directions_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="8dp"
                android:text="@string/get_directions"
                android:textSize="13sp"
                android:textColor="@color/black"
                android:gravity="center"
                android:paddingVertical="8dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground"
                android:fontFamily="@font/exo_regular"
                app:drawableStartCompat="@drawable/ic_directions" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/gray_500"
                android:layout_marginHorizontal="8dp"/>

            <TextView
                android:id="@+id/contact_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:drawablePadding="8dp"
                android:focusable="true"
                android:fontFamily="@font/exo_regular"
                android:gravity="center"
                android:paddingVertical="8dp"
                android:text="@string/contact"
                android:textColor="@color/black"
                android:textSize="13sp"
                app:drawableStartCompat="@drawable/ic_phone" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/gray_500"
                android:layout_marginHorizontal="8dp"/>

            <TextView
                android:id="@+id/share_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/share"
                android:textSize="13sp"
                android:textColor="@color/black"
                android:gravity="center"
                android:paddingVertical="8dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground"
                android:fontFamily="@font/exo_regular"
                android:drawablePadding="0dp"
                app:drawableStartCompat="@drawable/ic_share" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_500"
            android:layout_marginTop="16dp"/>

    </LinearLayout>

</ScrollView>
